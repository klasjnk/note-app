                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:id="@+id/imageColor4"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/_10sdp"
                app:tint="@color/white" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <View
                android:layout_width="@dimen/_35sdp"
                android:id="@+id/viewColor5"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/background_note_color_5"/>
            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:id="@+id/imageColor5"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/_10sdp"
                app:tint="@color/white" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <View
                android:layout_width="@dimen/_35sdp"
                android:id="@+id/viewColor6"
                android:layout_height="@dimen/_35sdp"
                android:backgroundTint="@color/colorAccent"
                android:background="@drawable/ic_color"/>
            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:id="@+id/imageColor6"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/_10sdp"
                app:tint="@color/white" />
        </FrameLayout>
    </LinearLayout>
    <HorizontalScrollView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:id="@+id/layout_tag"
        android:orientation="horizontal">
        <com.google.android.material.chip.ChipGroup
            android:layout_width="wrap_content"
            app:singleSelection="true"
            app:singleLine="true"

            android:layout_height="wrap_content">
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/customChipStyle"
                android:id="@+id/tag_note"
                android:text="Nhật ký"/>
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/customChipStyle"
                android:id="@+id/tag_todo"
                android:text="Todo list"/>
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/customChipStyle"
                android:id="@+id/tag_schedule"
                android:text="Lịch"/>
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/customChipStyle"
                android:id="@+id/tag_normal"
                android:text="Hằng ngày"/>
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/customChipStyle"
                android:id="@+id/tag_travel"
                android:text="Du lịch"/>
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/customChipStyle"
                android:id="@+id/tag_now"
                android:text="Khoảnh khắc"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/tag_edu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/customChipStyle"
                android:text="Học tập"/>
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>
